<!DOCTYPE html>
<html>
  <head>
    <title>VideoMatchingApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <ul class="header-menus">
        <% if @current_user %>
          <li>
            <%= link_to(@current_user.hdl_name, "/users/#{@current_user.id}") %>
          </li>
          <li>
            <%= link_to("ログアウト", "/logout", {method: :post}) %>
          </li>
        <% else %>
          <li>
            <%= link_to("新規登録", "/signup") %>
          </li>
          <li>
            <%= link_to("ログイン", "/login") %>
          </li>
        <% end %>
      </ul>
      <% if flash[:notice] %>
        <br>
        <%= flash[:notice] %>
      <% end %>
    </header>
    <nav>
      サイドバー
    　<li>
        <%= link_to("投稿一覧", posts_path ) %>
      </li>
      <% if @current_user %>
        <li>
          <%= link_to("新規投稿", new_post_path ) %>
        </li>
        <li>
          <%= link_to("ユーザー一覧", "/users/index") %>
        </li>
      <% end %>
    </nav>
    <main>
     <%= yield %>
    </main>
    <footer>
      フッター
    </footer>
  </body>
</html>
