<!DOCTYPE html>
<html>
  <head>
    <title>VideoMatchingApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
     <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>

  <body>

    <header class="navbar navbar-expand navbar-dark bg-primary flex-column flex-md-row bd-navbar sticky-top">
      <%= link_to("投稿一覧", posts_path, {class: "navbar-brand"}) %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if @current_user %>
          <li class="nav-item active">
            <%= link_to(@current_user.hdl_name, "/users/#{@current_user.id}", {class: "nav-link"}) %>
          </li>
          <li class="nav-item dropdown active">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              機能一覧
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to("新規投稿", new_post_path, {class: "dropdown-item"}) %>
              <%= link_to("ユーザー一覧", "/users/index", {class: "dropdown-item"}) %>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#">閉じる</a>
            </div>
          </li>
          <% else %>
          <li class="nav-item active">
            <%= link_to("新規登録", "/signup", {class: "nav-link"}) %>
          </li>
          <% end %>
        </ul>
        <ul class="navbar-nav my-2 my-lg-0">
          <li class="nav-item active">
            <%= link_to("ホーム", "/", {class: "nav-link mr-sm-2"}) %>
          </li>
          <% if @current_user %>
          <li class="nav-item active">
            <%= link_to("ログアウト", "/logout", {method: :post, class: "nav-link my-2 my-sm-0 btn"}) %>
          </li>
          <% else %>
          <li class="nav-item active">
            <%= link_to("ログイン", "/login",  {class: "nav-link my-2 my-sm-0"}) %>
          </li>
          <% end %>
      </div>
    </header>

    <% if flash[:notice] %>
      <div class="text-center h5 bg-warning p-2">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <main class="container d-flex justify-content-center bg-light min-vh-100 min-vw-100">
      <%= yield %>
    </main>

    <!-- Bootstrap core JavaScript　-->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>
