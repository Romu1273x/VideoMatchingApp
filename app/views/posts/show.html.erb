<div>
  <div>詳細ページ</div>
  <div>
    <p><%= @post.user_id %></p>
    <p><%= @post.title %></p>
    <p><%= @post.select %></p>
    <p><%= @post.period %></p>
    <p><%= @post.price %></p>
    <p><%= @post.content %></p>
  </div>
  <div>
    <% if @post.user_id == @current_user.user_id %>
      <%= link_to("編集", "/posts/#{@post.id}/edit") %>
      <%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %>
    <% end %>
  </div>
</div>