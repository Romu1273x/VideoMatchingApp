<div>
  <div>新規投稿ページ</div>
  <div>
    <% if @error_message %>
      <%= @error_message %>
    <% end %>
    <%= form_tag("/posts/create") do %>
        <p>タイトル</p>
        <input name="title" value="<%= @post.title %>">
        <p>契約形態</p>
        <input name="select" value="<%= @post.select %>">
        <p>期間・期限</p>
        <input name="period" value="<%= @post.period %>">
        <p>料金</p>
        <input name="price" value="<%= @post.price %>">
        <p>詳細</p>
        <textarea name="content"><%= @post.content %></textarea>  
        <br>
        <input type="submit" value="投稿">
    <% end %>
  </div>
</div>